{
    "manifest_version": 2,
    "name": "Wordlister",
    "description": "Uses the proxy API to build wordlists.",
    "version": "2.0",


    "browser_action": {
        "default_icon": "icons/wordlister-256px.ico",
        "default_title": "Word",
        "default_popup": "popup/popup.html"
    },

    "icons": {
        "48": "icons/wordlister-48x48.png",
        "96": "icons/wordlister-96x96.png"
    },
     

    "background": {
        "scripts": ["background/background.js"]
    },

    "permissions": ["webRequest", "storage", "<all_urls>"]

}